# ==============================================
# N2STORE API - Environment Configuration
# ==============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to git!

# Server Configuration
NODE_ENV=development
PORT=3000

# TPOS API Configuration
TPOS_API_BASE=https://tomato.tpos.vn/odata/ProductTemplate
TPOS_AUTH_TOKEN=Bearer your_token_here
TPOS_CREATED_BY_NAME=nvkt
TPOS_EXPAND_PARAMS=UOM,UOMCateg,Categ,UOMPO,POSCateg,Taxes,SupplierTaxes,Product_Teams,Images,UOMView,Distributor,Importer,Producer,OriginCountry,ProductVariants($expand=UOM,Categ,UOMPO,POSCateg,AttributeValues),AttributeLines,UOMLines($expand=UOM),ComboProducts,ProductSupplierInfos

# Facebook API Configuration
FACEBOOK_API_URL=https://tomato.tpos.vn/api/facebook-graph/livevideo
FACEBOOK_TOKEN=Bearer your_facebook_token_here

# Token Manager Configuration (Frontend)
TOKEN_API_URL=https://tomato.tpos.vn/token
TOKEN_USERNAME=your_username
TOKEN_PASSWORD=your_password
TOKEN_CLIENT_ID=tmtWebApp
TOKEN_GRANT_TYPE=password

# CORS Configuration (comma-separated list)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5500,http://127.0.0.1:3000,http://127.0.0.1:5500

# Dynamic Headers Storage
DYNAMIC_HEADERS_STORAGE=file
DYNAMIC_HEADERS_FILE=./dynamic-headers.json
# Alternative: redis, memory, database

# Logging
ENABLE_HEADER_LOGGING=true
LOG_LEVEL=info

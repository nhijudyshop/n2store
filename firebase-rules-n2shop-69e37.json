{
  "rules": {
    // ===== RULES CŨ (GIỮ NGUYÊN) =====
    "savedProducts": {
      ".read": true,
      ".write": true,
      ".indexOn": ["Id"]
    },
    "displaySettings": {
      ".read": true,
      ".write": true
    },
    "syncCurrentPage": {
      ".read": true,
      ".write": true
    },
    "chatConversations": {
      ".read": true,
      ".write": true,
      ".indexOn": ["lastMessageTimestamp", "type"]
    },
    "chatMessages": {
      ".read": true,
      ".write": true,
      "$conversationId": {
        ".indexOn": ["timestamp", "senderId"]
      }
    },
    "chatMembers": {
      ".read": true,
      ".write": true,
      "$conversationId": {
        ".indexOn": ["userId", "lastReadTimestamp"]
      }
    },
    "userStatus": {
      ".read": true,
      ".write": true,
      ".indexOn": ["status", "lastActive"]
    },
    "chatTyping": {
      ".read": true,
      ".write": true
    },

    // ===== PRODUCT ASSIGNMENTS =====
    "productAssignments": {
      ".read": true,
      ".write": true,
      "$userId": {
        ".read": true,
        ".write": true
      }
    },
    "productAssignments_history": {
      ".read": true,
      ".write": true,
      "$userId": {
        "$uploadId": {
          ".read": true,
          ".write": true
        }
      }
    },
    "productAssignments_backup": {
      ".read": true,
      ".write": true,
      "$userId": {
        "$uploadId": {
          ".read": true,
          ".write": true
        }
      }
    },

    // ===== ORDER PRODUCTS =====
    "order_products": {
      ".read": true,
      ".write": true,
      "shared": {
        ".read": true,
        ".write": true
      },
      "$orderId": {
        ".read": true,
        ".write": true
      }
    },
    "orderProducts": {
      ".read": true,
      ".write": true,
      "$productKey": {
        ".read": true,
        ".write": true
      }
    },

    // ===== ORDER NOTES =====
    "order_notes_snapshot": {
      ".read": true,
      ".write": true,
      "$orderId": {
        ".read": true,
        ".write": true
      }
    },

    // ===== CHAT PRODUCTS =====
    "chat_products": {
      ".read": true,
      ".write": true,
      "shared": {
        ".read": true,
        ".write": true
      },
      "$orderId": {
        ".read": true,
        ".write": true
      }
    },
    "chat_products_history": {
      ".read": true,
      ".write": true,
      "shared": {
        ".read": true,
        ".write": true
      }
    },

    // ===== SOLUONG PRODUCTS =====
    "soluongProducts": {
      ".read": true,
      ".write": true,
      "$productKey": {
        ".read": true,
        ".write": true
      }
    },

    // ===== DISPLAY SETTINGS =====
    "orderDisplaySettings": {
      ".read": true,
      ".write": true
    },
    "hiddenProductsDisplaySettings": {
      ".read": true,
      ".write": true
    },
    "soluongDisplaySettings": {
      ".read": true,
      ".write": true
    },

    // ===== SYNC SETTINGS =====
    "orderSyncCurrentPage": {
      ".read": true,
      ".write": true
    },
    "orderSyncSearchData": {
      ".read": true,
      ".write": true
    },
    "orderIsMergeVariants": {
      ".read": true,
      ".write": true
    },
    "soluongSyncCurrentPage": {
      ".read": true,
      ".write": true
    },
    "soluongSyncSearchData": {
      ".read": true,
      ".write": true
    },
    "soluongIsMergeVariants": {
      ".read": true,
      ".write": true
    }
  }
}
